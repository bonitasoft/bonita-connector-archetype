<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>all</id>
    <formats>
        <!-- <format>dir</format>-->
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <outputDirectory/>
            <directory>target/classes</directory>
            <includes>
                <!-- Only first level files -->
                <include>*.*</include>
            </includes>
            <excludes>
                <exclude>${artifactId}-definition.xml</exclude>
                <exclude>${artifactId}-implementation.xml</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <outputDirectory>classpath</outputDirectory>
            <directory>${basedir}/target</directory>
            <includes>
                <include>*:jar</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${basedir}/target/classes/${artifactId}-definition.xml</source>
            <outputDirectory></outputDirectory>
            <destName>${artifactId}.def</destName>
        </file>
        <file>
            <source>${basedir}/target/classes/${artifactId}-implementation.xml</source>
            <outputDirectory></outputDirectory>
            <destName>${artifactId}.impl</destName>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <outputDirectory>classpath</outputDirectory>
        </dependencySet>
    </dependencySets>
</assembly>